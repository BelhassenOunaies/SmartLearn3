{% extends 'baseAdmin.html.twig' %}

{% block title %}Coach index{% endblock %}

{% block body %}
    <h1>Coach index</h1>

    <table class="table">

        <thead class="text-uppercase bg-warning">

            <tr>
                <th>Username</th>
                <th>Mail</th>
                <th>Date of birth</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coach in coaches %}
            <tr>
                <td>{{ coach.username }}</td>
                <td>{{ coach.mail }}</td>
                <td>{{ coach.dateN ? coach.dateN|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('coach_show', {'id': coach.id}) }}">show</a>
                    <a href="{{ path('coach_edit', {'id': coach.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coach_new') }}">Create new</a>
{% endblock %}
